
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <!--notification start-->
        <section class="panel">
            <header class="panel-heading">
                New Employee
            </header>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="usr">First Name:</label>
                            <input type="text" class="form-control" id="txtFirst">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="usr">Middle Name:</label>
